<Window x:Class="HX_Sample_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HX_Sample_App.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- 青色エリア -->
            <ColumnDefinition Width="*"/>
            <!-- 黄色エリア -->
        </Grid.ColumnDefinitions>

        <!-- 青色エリア -->
        <StackPanel Background="Blue" Grid.Column="0">
            <Button Content="画面1" Command="{Binding ShowView1Command}" Margin="10"/>
            <Button Content="画面2" Command="{Binding ShowView2Command}" Margin="10"/>
        </StackPanel>

        <!-- 黄色エリア -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Background="Yellow"/>
    </Grid>
</Window>