<Window x:Class="HX_Sample_App.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HX_Sample_App.ViewModel"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Window.DataContext>
        <local:LoginViewModel/>
    </Window.DataContext>
    <Grid>
        <!---ログイン認証-->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <!---ログインID-->
            <StackPanel Orientation="Horizontal" >
                <TextBlock Text="ログインID" Margin="0,0,20,0"/>
                <TextBox Width="200" Text="{Binding loginId}"/>
            </StackPanel>

            <!--パスワード-->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" >
                <TextBlock Text="パスワード" Margin="0,0,23,0"/>
                <TextBox Width="200" Text="{Binding loginPassword}"/>
            </StackPanel>

            <!--ログインボタン-->
            <StackPanel Margin="10,10,10,0">
                <Button Content="ログイン" Width="100" Command="{Binding LogionCheck}" CommandParameter="{Binding Login}"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
